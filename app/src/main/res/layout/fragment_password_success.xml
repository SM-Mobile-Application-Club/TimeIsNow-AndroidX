<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordSuccessFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgetPasswordSuccessMessage"
        android:padding="30dp"
        android:orientation="vertical"
        android:background="@color/background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee"
                android:gravity="center"
                android:layout_marginTop="-100dp"
                android:includeFontPadding="false"
                android:text="Password Updated"
                android:textAlignment="center"
                android:textColor="@color/mainText"
                android:textSize="40sp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_action_check"
                app:tint="@color/mainText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Your password has been updated succesffuly!"
                android:textAlignment="center"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_forgetPasswordLoginScreen"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Login"
                android:background="@color/accentColor"
                android:textColor="@color/background"
                android:layout_marginTop="20dp"/>




        </LinearLayout>




    </LinearLayout>

</FrameLayout>