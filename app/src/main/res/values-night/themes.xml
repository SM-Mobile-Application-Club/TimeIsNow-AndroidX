<resources>
    <!-- Base application theme. -->
    <style name="Theme.TimeIsNow" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#BB86FC</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">#121212</item>
        <item name="android:colorBackground">#121212</item>
    </style>

    <!-- Menu Style -->
    <style name="navigationTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">#BB86FC</item>
        <!-- Background color when Selected -->
        <item name="colorControlHighlight">#121212</item>

    </style>

</resources>