<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"> // wrapper

    <PreferenceCategory app:title="@string/messages_header"
        app:icon="@drawable/ic_baseline_message_24">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header"
        app:icon="@drawable/ic_baseline_settings_24">


        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Dark Mode"
        app:icon="@drawable/ic_baseline_dark_mode_24">

        <SwitchPreferenceCompat
            app:title="Enable Dark Mode" />

        <ListPreference
            app:title="Duration of Nigh Mode"
            app:defaultValue="Just Today"
            app:entries="@array/dark_mode_entries"
            app:entryValues="@array/dark_mode_values"
            app:key="reply"
            app:useSimpleSummaryProvider="true"/>




    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications"
        app:icon="@drawable/ic_baseline_notifications_24">


    </PreferenceCategory>

</PreferenceScreen>